<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/tab_page_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#33000000">

        <RadioButton
            android:id="@+id/tab_home"
            style="@style/SmartBJTabStyle"
            android:text="首页"
            android:drawableTop="@drawable/tab_home_selector"/>

        <RadioButton
            android:id="@+id/tab_news_center"
            style="@style/SmartBJTabStyle"
            android:text="新闻中心"
            android:drawableTop="@drawable/tab_news_centenr_selector"/>

        <RadioButton
            android:id="@+id/tab_smart_service"
            style="@style/SmartBJTabStyle"
            android:text="智慧服务"
            android:drawableTop="@drawable/tab_smart_service_selector"/>

        <RadioButton
            android:id="@+id/tab_gov_affairs"
            style="@style/SmartBJTabStyle"
            android:text="政务"
            android:drawableTop="@drawable/tab_gov_affairs_selector"/>

        <RadioButton
            android:id="@+id/tab_setting_center"
            style="@style/SmartBJTabStyle"
            android:text="设置中心"
            android:drawableTop="@drawable/tab_setting_selector"/>

    </RadioGroup>

</LinearLayout>